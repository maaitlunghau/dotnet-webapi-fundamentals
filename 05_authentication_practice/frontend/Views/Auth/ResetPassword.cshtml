@model frontend.DTOs.ResetPasswordRequestDto

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-lock-fill display-4 text-warning"></i>
                        <h3 class="mt-3 fw-bold">Reset Password</h3>
                        <p class="text-muted">Enter your new password</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Otp" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold">
                                <i class="bi bi-lock me-1"></i>New Password
                            </label>
                            <input asp-for="NewPassword" type="password" 
                                   class="form-control form-control-lg" 
                                   placeholder="Enter new password" autofocus />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            <small class="text-muted">Minimum 8 characters</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                <i class="bi bi-lock-fill me-1"></i>Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" type="password" 
                                   class="form-control form-control-lg" 
                                   placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Reset Password
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none small">
                                <i class="bi bi-arrow-left me-1"></i>Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
