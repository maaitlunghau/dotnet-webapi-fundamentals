@model frontend.DTOs.VerifyOtpRequestDto

@{
    ViewData["Title"] = "Verify OTP";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-check display-4 text-success"></i>
                        <h3 class="mt-3 fw-bold">Verify OTP</h3>
                        <p class="text-muted">Enter the 6-digit code sent to</p>
                        <p class="fw-semibold text-primary">@Model.Email</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="VerifyOtp" method="post">
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-4">
                            <label asp-for="OtpCode" class="form-label fw-semibold">
                                <i class="bi bi-123 me-1"></i>OTP Code
                            </label>
                            <input asp-for="OtpCode" class="form-control form-control-lg text-center" 
                                   placeholder="000000" maxlength="6" autofocus 
                                   style="letter-spacing: 0.5em; font-size: 1.5rem;" />
                            <span asp-validation-for="OtpCode" class="text-danger small"></span>
                            <small class="text-muted">Enter the 6-digit code</small>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Verify OTP
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="ForgotPassword" class="text-decoration-none small">
                                <i class="bi bi-arrow-left me-1"></i>Resend OTP
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto-format OTP input (only numbers)
        document.querySelector('input[name="OtpCode"]').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
}
