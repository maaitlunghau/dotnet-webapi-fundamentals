@model List<Shared.Domain.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid py-4">
    <!-- Success/Error Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold text-dark mb-0">User Management</h2>
            <p class="text-muted mb-0">Manage system users and their roles</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Add New User
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info border-0 shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No users found. Click "Add New User" to create one.
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="px-4 py-3 text-muted fw-semibold" style="width: 50px;">#</th>
                                <th class="px-4 py-3 text-muted fw-semibold">Email</th>
                                <th class="px-4 py-3 text-muted fw-semibold" style="width: 150px;">Role</th>
                                <th class="px-4 py-3 text-muted fw-semibold text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var user = Model[i];
                                <tr>
                                    <td class="px-4 py-3 text-muted">@(i + 1)</td>
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-3">
                                                @user.Email.Substring(0, 1).ToUpper()
                                            </div>
                                            <span class="fw-medium">@user.Email</span>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3">
                                        @if (user.Role.ToLower() == "admin")
                                        {
                                            <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                                <i class="bi bi-shield-fill-check me-1"></i>Admin
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary-subtle text-primary px-3 py-2">
                                                <i class="bi bi-person-fill me-1"></i>User
                                            </span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Update" asp-route-id="@user.Id" 
                                               class="btn btn-outline-primary" 
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    onclick="confirmDelete('@user.Id', '@user.Email')"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light border-0 py-3">
                <small class="text-muted">
                    <i class="bi bi-people-fill me-1"></i>
                    Total: <strong>@Model.Count</strong> user(s)
                </small>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete user <strong id="deleteUserEmail"></strong>?</p>
                <p class="text-muted small mb-0 mt-2">This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 16px;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
        }

        .table > :not(caption) > * > * {
            border-bottom-width: 1px;
            border-color: #f0f0f0;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .btn-group-sm > .btn {
            padding: 0.375rem 0.75rem;
        }

        .badge {
            font-weight: 500;
            font-size: 0.875rem;
            border-radius: 6px;
        }

        .bg-danger-subtle {
            background-color: #fee;
        }

        .bg-primary-subtle {
            background-color: #e7f1ff;
        }
    </style>
}

@section Scripts {
    <script>
        function confirmDelete(userId, userEmail) {
            document.getElementById('deleteUserEmail').textContent = userEmail;
            document.getElementById('deleteForm').action = '/User/Delete/' + userId;
            
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
